<!-- Heredando de base -->

<meta
  http-equiv="content-type"
  content="text/html; charset=windows-1252">
</meta>

{% extends "pagina1app/base.html" %} {% load static %} {% block content %}

<header
  class="header"
  name="viewport"
  style="background-color: white;"
  <h2>
  <div style="margin-left: 40px; text-align: center;">
    <b style="font-size: xx-large;">Contacta con nosotros</b>
  </div>

  <hr></hr>

  <div style="margin-left: 40px;"><br/></div>

  <div style="margin-left: 40px;">{% load crispy_forms_tags %}</div>

  <div class="row"> <!-- Centrando -->
    <div class="col-12 col-md-6 offset-md-3">
      <form
        class=" "
        action = " "
        method="post">

        {% csrf_token %} {{ form | crispy}}

        <br/>
      </form>

      <hr></hr>

      {{mensaje}}

    </div>
  </div>


  <form
    class="formulario_contacto"
    action
    method="post">
    <hr></hr>
  </form>

  <form
    class="formulario_contacto"
    action
    style="margin-left: 40px;"
    method="post">

    <div class="d-flex justify-content-end">

      <input
        class="btn btn-secondary"
        value="Cancelar"
        type="reset"
      />

      &nbsp; <!-- Espacio horizontal entre botones -->

      <button
        id="btnEnviar"
        class="btn btn-primary"
        name="btnEnviar"
        type="submit">
        Enviar
      </button>

    </div>

  </form>



  <table id="tablacontactos"></table>
</header>

{% endblock %}

<!-- Referencias -->

<!-- https://www.youtube.com/watch?v=90M4gunBRLs&t=174s&ab_channel=moisessepulveda -->

<!-- method = "post" es para que los datos no aparezcan en la url por cuestiones de seguridad -->
